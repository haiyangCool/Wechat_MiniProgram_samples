  width: 220rpx;
  height: 220rpx;
  margin-right: 10rpx;
}

.comment-audio-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 10rpx;
}

.comment-audio-item image {
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.comment-audio-item text {
  color: lightskyblue;
  font-size: 22rpx;
